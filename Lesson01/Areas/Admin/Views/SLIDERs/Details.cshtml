@model MyClass.Model.SLIDER

@{
    ViewBag.Title = "Thông tin Slider";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2>THÔNG TIN SLIDER</h2>
    </div>
    <div class="col-md-6 text-right">
        <a href="@Url.Action("Index","SLIDERs")" class="btn btn-success"><i class="fas fa-list"></i> Trở về danh sách</a>
    </div>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">

        <div class="form-group">
            <label style="font-weight: bold"> Tên hình:</label>
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="form-group">
            <label style="font-weight: bold"> Link:</label>
            @Html.DisplayFor(model => model.Link)
        </div>
        <div class="form-group">
            <label style="font-weight: bold"> Img:</label>
            @Html.DisplayFor(model => model.Img)
        </div>
        <div class="form-group">
            <label style="font-weight: bold"> Ngày tạo:</label>
            @Html.DisplayFor(model => model.DateCreate)
        </div>
        <div class="form-group">
            <label style="font-weight: bold">Người tạo:</label>
            @Html.DisplayFor(model => model.USER.FullName)
        </div>
    </dl>
</div>
<div class="text-right">
    <a class="btn btn-success" href="@Url.Action("Edit", "SLIDERs", new { @id = Model.IdSlider })">
        SỬA
    </a>
</div>
