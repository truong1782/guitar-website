
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>ĐĂNG NHẬP</title>


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>
    <link href="~/Public/css/Login.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
</head>
<body class="text-center">

    <main class="form-signin">
        @using (Html.BeginForm())
        {
        <form>
            <h1 class="h3 mb-3 fw-normal">ĐĂNG NHẬP HỆ THỐNG</h1>
            <label class=" fw-normal visually-hidden">Tên tài khoản</label>
            <input name="username" type="text" class="mb-3 form-control" placeholder="Tên tài khoản" required autofocus>
            <label class="fw-normal visually-hidden">Mật khẩu</label>
            <input name="password" type="password" class="mb-3 form-control" placeholder="Mật khẩu" required>
            <div class="form-group">
                <p class="text-danger">@ViewBag.Error</p>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Đăng nhập</button>
        </form>
        }
        </main>




    </body>
