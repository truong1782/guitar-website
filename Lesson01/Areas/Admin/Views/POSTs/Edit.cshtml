@model MyClass.Model.POST

@{
    ViewBag.Title = "Sửa thông tin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2>SỬA THÔNG TIN</h2>
    </div>
    <div class="col-md-6 text-right">
        <a href="@Url.Action("Index","POSTs")" class="btn btn-success"><i class="fas fa-list"></i> Trở về danh sách</a>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPost)

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <lable class="control-label">Tên bài viết</lable>
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <lable class="control-label">Chủ đề</lable>
                    @Html.DropDownList("IdTopic", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdTopic, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Hình ảnh</label>
            <input name="Img" type="file" class="form-control" />
        </div>
        <div class="form-group">
            <lable class="control-label">Bài giới thiệu</lable>
            <div>
                @Html.TextAreaFor(model => model.Detail, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <lable class="control-label">Mô tả ngắn</lable>
            <div>
                @Html.EditorFor(model => model.Sumary, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sumary, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <lable class="control-label">Thể loại</lable>
            <div>
                @Html.EditorFor(model => model.PostType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PostType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="text-right">
                <input class="btn btn-success" type="submit" value="Lưu" />
            </div>
        </div>
    </div>
}
