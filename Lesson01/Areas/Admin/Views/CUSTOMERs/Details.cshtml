@model MyClass.Model.USER

@{
    ViewBag.Title = "Thông tin khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2>THÔNG TIN KHÁCH HÀNG</h2>
    </div>
    <div class="col-md-6 text-right">
        <a href="@Url.Action("Index","CUSTOMERs")" class="btn btn-success"><i class="fas fa-list"></i> Trở về danh sách</a>
    </div>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <div class="form-group">
            <div class="col-md-4">
                <label style="font-weight: bold"> Mã khách hàng:</label>
                @Html.DisplayFor(model => model.IdUser)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label style="font-weight: bold"> Họ tên:</label>
                @Html.DisplayFor(model => model.FullName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label style="font-weight: bold"> Tài khoản:</label>
                @Html.DisplayFor(model => model.UserName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label style="font-weight: bold"> Email:</label>
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label style="font-weight: bold"> Số điện thoại:</label>
                @Html.DisplayFor(model => model.Phone)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label style="font-weight: bold">Địa chỉ:</label>
                @Html.DisplayFor(model => model.Address)
            </div>
        </div>
    </dl>
</div>
