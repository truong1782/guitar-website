@model MyClass.Model.TOPIC

@{
    ViewBag.Title = "Tạo chủ đề";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2>THÊM CHỦ ĐỀ</h2>
    </div>
    <div class="col-md-6 text-right">
        <a href="@Url.Action("Index","TOPICs")" class="btn btn-success"><i class="fas fa-list"></i> Trở về danh sách</a>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TOPIC</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên chủ đề
            <div></div>
            @Html.EditorFor(model => model.NameTopic, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NameTopic, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="text-right">
            <input class="btn btn-success" type="submit" value="Lưu" />
        </div>
    </div>
}

