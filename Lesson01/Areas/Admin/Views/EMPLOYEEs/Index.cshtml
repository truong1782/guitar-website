@model IEnumerable<MyClass.Model.USER>

@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong>DANH SÁCH NHÂN VIÊN</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create","EMPLOYEEs")" class="btn btn-success"><i class="fas fa-plus-circle"></i> Thêm nhân viên</a>
            </div>
        </div>

    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped" id="myTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên nhân viên</th>
                    <th>Chức vụ</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ROLE.NameRole)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @if (item.IdRole != 1)
                        {
                            <a class="btn btn-sm btn-success" href="@Url.Action("Edit","EMPLOYEEs",new { @id = item.IdUser })">
                                <i class="fas fa-edit"></i>
                            </a>

                            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete","EMPLOYEEs",new { @id = item.IdUser })">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        }
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details","EMPLOYEEs",new { @id = item.IdUser })">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    jQuery(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.22/i18n/Vietnamese.json"
            }
        });
    });
</script>
