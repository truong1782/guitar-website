@{
    ViewBag.Title = "Tất cả sản phẩm";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@using Lesson01.Controllers;
@using Lesson01.Models.Data;
@{
    var data = (CATEGORY)ViewBag.title_product;
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-6">
            <h3 class="text-center my-4">Lọc theo</h3>
            @Html.Action("ListCategory", "Module")
        </div>
        <div class="col-md-8 col-6">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="text-center my-4">@data.NameCategory</h3>
                </div>
                @foreach (PRODUCT item in ViewBag.listProduct)
                {
                    <div class="col-md-4 col-12">
                        <div class="card">
                            <a href="@Url.Action("ProductDetail","Product",new {slug = item.Slug})">
                                <img src="~/Public/images/Product/@item.Img" class="card-img-top" alt="...">
                            </a>

                            <div class="card-body">
                                <h4 class="card-title text-left">@item.NameProduct</h4>
                                <p class="card-text text-left">
                                    <b>Giá:@((String.Format("{0:N0}", item.PriceBuy))+"đ")</b>
                                </p>
                                <a class="btn btn-primary" href="@Url.Action("ProductDetail","Product",new {slug = item.Slug})">Chi tiết sản phẩm</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



